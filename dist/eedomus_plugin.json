{
    "plugin_id": "ucam",
    "name_fr": "Camera universelle",
    "name_en": "Universal camera",
    "icon": "nikya_ucam.png",
    "version": "1.0",
    "creation_date": "2017-11-29",
    "modification_date": "2017-11-29",
    "author": "<a href='https://github.com/Nikya' target='_blank'>Nikya</a>",
    "description_fr": "Demander à une caméra de prendre une photo (Snapshot), puis sauvegarde FTP. (Compatible avec les cameras disposants d'une URL de Snapshot) (<a target='_blank' href='https://github.com/Nikya/eedomusScript_ucam'>Documentation</a>)",
    "description_en": "Ask to a camera to take a picture (Snapshot), then FTP saving. (Compatible with cameras with a Snapshot URL) (<a target='_blank' href='https://github.com/Nikya/eedomusScript_ucam'>Documentation</a>)",
    "forum_link": "http://forum.eedomus.com/viewtopic.php?f=50&t=3330xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    "parameters": [
        {
            "parameter": "help_url",
            "description": "Documentation",
            "xtype": "displayfield",
            "field": "style: 'padding: 3px;', value: '<a target=\\'_blank\\' href=\\'https://github.com/Nikya/eedomusScript_ucam\\'>Github/Nikya/ucam</a>'"
        },
        {
            "parameter": "help_encode",
            "description": "Utilitaires d'encodage",
            "xtype": "displayfield",
            "field": "style: 'padding: 3px;', value: '<a target=\\'_blank\\' href=\\'https://www.google.fr/search?q=url+encode+online&ie=utf-8&oe=utf-8&client=firefox-b-ab&gfe_rd=cr&dcr=0&ei=Qd0fWq3DCen-8AfprbvYDA\\'>URL encode online</a>'"
        },
        {
            "parameter": "urlsnap",
            "description": "URL de Snap de la caméra (URL à encoder)",
            "xtype": "textfield",
            "field": "allowBlank:false"
        },
        {
            "parameter": "ftptarget",
            "description": "Information de FTP (user:password@server)",
            "xtype": "textfield",
            "field": "allowBlank:false, regex:/(.+):(.+)@(.+)/, regexText:'Format attendue \\'user:password@server\\' ' "
        }
    ],
    "scripts": [
        {
            "name": "ucam.php"
        }
    ],
    "devices": [
        {
            "device_id": "ucam",
            "module_id": "41",
            "type": "http",
            "name_fr": "Snapshot cam",
            "icon": "nikya_ucam.png",
            "utilisation_id": "43",
            "parameters": {
                "value_type": "list",
                "ignore_errors": 3,
                "VAR1": "plugin.parameters.urlsnap",
                "VAR2": "plugin.parameters.ftptarget"
            },
            "values": [
                {
                    "value": "0",
                    "description": "3 photos séparés de 1 seconde",
                    "icon": "nikya_ucam.png",
                    "http_url": "http://localhost/script/",
                    "http_type": "GET",
                    "http_params": "?exec=ucam.php&snapurl=[VAR1]&ftptarget=[VAR2]&snapcount=3&snapinterval=1"
                },
                {
                    "value": "1",
                    "description": "5 photos séparés de 2 secondes",
                    "icon": "nikya_ucam.png",
                    "http_url": "http://localhost/script/",
                    "http_type": "GET",
                    "http_params": "?exec=ucam.php&snapurl=[VAR1]&ftptarget=[VAR2]&snapcount=5&snapinterval=2"
                }
            ]
        }
    ]
}
